{% extends 'base.html.twig' %}

{% block body %}

{% for tapa in tapas %}
<div class="col-lg-4 col-sm-6">
  <a class="portfolio-box" href="{{ path( 'mostrar',
                                  { 'id': tapa.id }) }}">
  <img class="img-fluid" src="public/img/tapas/{{ tapa.foto }}">
  <div class="portfolio-box-caption">
    <div class="portfolio-box-caption-content">
      <div class="project-category text-faded">
        Tapa {{ tapa.id }}
      </div>
      <div class="project-name">
        {{ tapa.nomTapa }}
      </div>
    </div>
  </div>
  </a>
</div>
{% endfor %}

{% endblock %}
